{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "strict": false,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["quasar", "@types/node", "webpack-env", "webpack"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["src/@types", "node_moudles/@types"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
